{
  "name": "@react-native-node-api-module-autolinking/example-node-api-module",
  "version": "1.0.0",
  "main": "index.js",
  "types": "index.d.ts",
  "description": "A simple Node-API module in C that adds two numbers.",
  "gypfile": true,
  "files": [
    "index.js",
    "index.d.ts",
    "build/macosx/Release",
    "build/iphoneos/Release",
    "build/iphonesimulator/Release",
    "build/catalyst/Release",
    "build/xros/Release",
    "build/xrsimulator/Release",
    "build/appletvos/Release",
    "build/appletvsimulator/Release",
    "LICENSE-hermes.txt",
    "LICENSE-runtime-node-api.txt"
  ],
  "scripts": {
    "cmake:clean": "cmake-js clean",
    "cmake:macosx": "cmake-js compile --CDSDK_NAME=macosx --out=build/macosx",
    "cmake:iphoneos": "cmake-js compile --CDSDK_NAME=iphoneos --out=build/iphoneos",
    "cmake:iphonesimulator": "cmake-js compile --CDSDK_NAME=iphonesimulator --out=build/iphonesimulator",
    "cmake:catalyst": "cmake-js compile --CDSDK_NAME=catalyst --out=build/catalyst",
    "cmake:xros": "cmake-js compile --CDSDK_NAME=xros --out=build/xros",
    "cmake:xrsimulator": "cmake-js compile --CDSDK_NAME=xrsimulator --out=build/xrsimulator",
    "cmake:appletvos": "cmake-js compile --CDSDK_NAME=appletvos --out=build/appletvos",
    "cmake:appletvsimulator": "cmake-js compile --CDSDK_NAME=appletvsimulator --out=build/appletvsimulator",
    "build:apple": "./scripts/create_universal_framework.sh iphoneos iphonesimulator catalyst xros xrsimulator appletvos appletvsimulator",
    "format:binding": "node scripts/format-binding.mjs",
    "format": "prettier . --write && npm run format:binding",
    "lint": "eslint .",
    "build": "node-gyp rebuild"
  },
  "devDependencies": {
    "cmake-js": "^7.3.0",
    "eslint": "^8.19.0",
    "node-api-headers": "^1.5.0",
    "node-gyp": "^11.1.0",
    "prettier": "2.8.8"
  }
}
